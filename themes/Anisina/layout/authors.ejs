---
layout: layout
---
<style>
    .intro-header .site-heading {
        margin: 50px;
    }
    <% if (page["cdn"] === 'header-off'){%>
    header.intro-header {
        background-image: url('<%= page["header-img"] || config["post-default-img"]%>');
    }

    <%} else {%>
    header.intro-header {
        background-image: url('<%- page["header-img"]?(config["cdn-url"]?config["cdn-url"]:"")+page["header-img"]+config["clip-content"] : config["post-default-img"]%>')
    }
    <% } %>

section{
    float:left;
    width:100%;
    background: #fff;  /* fallback for old browsers */
    padding:30px 0;
}
</style>

<!-- Page Header -->
<header class="intro-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1 ">
                <div class="site-heading text-center">
                    <h1><%= page.title || config.title %></h1>
                    <span class="subheading"><%= page.description || config.subtitle || "" %></span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- <section> -->
        <div class="container">
            <div class="row">
                <p style="color: midnightblue;">Please check our <a style="color: #b91a1a;" href="/contact">contact page</a> to know about posting content on this website.</p>
                    <% site.data.authors.authors.forEach(function(author){ %>
                    <div class="col-md-4 mt-4">
                            <div class="card border-secondary profile-card-5">
                                <div class="card-img-block">
                                    <img class="card-img-top" src="<%= author.image %>" alt="Card image cap">
                                </div>
                                <div class="card-body pt-0">
                                <h5 class="card-title"><%- author.name %></h5>
                                <p class="card-text"><%- author.title %></p>
                                <p class="card-text"><%- author.subtitle %></p>
                                <p class="card-text"><%- author.description %></p>
                                <a href="<%= author.profile %>" class="btn btn-primary">See Profile</a>
                              </div>
                            </div>
                            
                    </div>
                    <% }); %>     
            </div>
        </div>
<!-- </section> -->

